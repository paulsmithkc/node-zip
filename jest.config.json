{
  "roots": ["<rootDir>/src"],
  "transform": {
    "\\.ts$": "ts-jest"
  },
  "testRegex": "\\.test\\.[jt]s$",
  "moduleFileExtensions": ["ts", "js"],
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
